<project xmlns="http://maven.apache.org/DECORATION/1.3.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/DECORATION/1.3.0 http://maven.apache.org/xsd/decoration-1.3.0.xsd">

	<bannerLeft>
		<name>
			FCUnit for
          <![CDATA[
          <span class="color-highlight"> TIBCO BusinessWorks</span>
          ]]>
		</name>
		<href>./index.html</href>
	</bannerLeft>

	<!-- COMMON start -->
	<skin>
		<groupId>lt.velykis.maven.skins</groupId>
		<artifactId>reflow-maven-skin</artifactId>
		<version>1.1.1</version>
	</skin>

	<publishDate position="bottom" format="yyyy-MM-dd"/>
	<version position="bottom"/>
	<!-- COMMON end -->
	<custom>
		<reflowSkin>
			<!-- COMMON start -->
			<localResources>true</localResources>
			<absoluteResourceURL>${rootSiteDisplayURL}</absoluteResourceURL>
			<!-- Make this to 'false' for local development, i.e. file:// URLs -->
			<protocolRelativeURLs>true</protocolRelativeURLs>
			<smoothScroll>true</smoothScroll>
			<theme>site</theme>
			<highlightJs>true</highlightJs>
			<highlightJsTheme>github</highlightJsTheme>
			<brand>
				<!-- Brand text in top-left part of the site -->
				<name>
		          <![CDATA[
		          <style>.navbar .brand { padding:5px 20px; }</style><a class="brand" href="${rootSiteDisplayURL}/index.html"><span class="color-highlight">FC</span> TIBCO Factory</a><span class="brand" style="padding: 5px 5px;">/</span><a class="brand" href="${repositorySiteDisplayURL}/index.html"><span class="color-highlight">FCUnit</span> plugin</a>
		          ]]>
				</name>
			</brand>
			<titleTemplate>%2$s | %1$s</titleTemplate>
			<!-- Use Table of Contents at the top of the page (max 6 elements) -->
			<toc>top</toc>
			<tocTopMax>6</tocTopMax>
			<skinAttribution>false</skinAttribution>
			<!-- COMMON end -->
			<slogan>Automatic TIBCO BusinessWorks unit testing</slogan>
			<!-- Include the documentation and tools in the top navigation (in addition
				to links) -->
			<!-- <topNav>Documentation|Tools|Contribute</topNav> -->
			<!-- Split menus in the bottom navigation -->
			<bottomNav maxSpan="9">
				<column>Overview</column>
				<column>reports</column>
			</bottomNav>
			<bottomDescription>
		        <![CDATA[
		          <i><span class="color-highlight">FC</span>Unit</i>
		          (part of the
		          <i><span class="color-highlight">FC</span> TIBCO Factory</i>)
		          is an automatic unit testing tool for TIBCO BusinessWorks.
		        ]]>
			</bottomDescription>

			<endContent>
				<script type="text/javascript" src="$resourcePath/js/highlight.min.js"></script>
				<script type="text/javascript" src="$resourcePath/js/custom.js"></script>
				<script type="text/javascript">
				</script>
			</endContent>

			<pages>
				<index>
					<!-- Override the title -->
					<titleTemplate>FCUnit plugin for TIBCO BusinessWorks</titleTemplate>
					<!-- no breadcrumbs on the main index page -->
					<breadcrumbs>false</breadcrumbs>
					<!-- no ToC on the main index page -->
					<toc>false</toc>
					<markPageHeader>false</markPageHeader>
					<sections>
						<body />
						<thumbs>2</thumbs>
						<!-- <sidebar /> -->
					</sections>
				</index>
		        <usage>
					<sections>
						<body />
						<columns>1</columns>
					</sections>
				</usage>
				<contribute>
					<breadcrumbs>false</breadcrumbs>
				</contribute>
				<!-- Disable source highlighting for Maven reports -->
				<source-repository>
					<highlightJs>false</highlightJs>
				</source-repository>
				<issue-tracking>
					<highlightJs>false</highlightJs>
					<toc>false</toc>
				</issue-tracking>
				<license>
					<highlightJs>false</highlightJs>
					<toc>false</toc>
				</license>
				<!-- Disable ToC for some Maven reports -->
				<project-info>
					<toc>false</toc>
				</project-info>
				<dependencies>
					<tocTopMax>4</tocTopMax>
				</dependencies>
			</pages>
		</reflowSkin>
	</custom>

	<body>
		<!-- COMMON start -->
		<head>
			<link rel="stylesheet" href="$resourcePath/css/custom.css"/>
			<link rel="stylesheet" href="$resourcePath/css/github.min.css"/>
			<script src="$resourcePath/js/highlight.min.js"></script>
			<script src="$resourcePath/js/jquery.min.js"></script>
		</head>
		<!-- COMMON end -->

		<menu name="Overview">
			<item name="Introduction" href="index.html" />
			<item name="Goals" href="plugin-info.html" />
			<item name="Usage" href="usage.html" />
			<item name="FAQ" href="faq.html" />
		</menu>

		<menu name="Reports" ref="reports" />
	</body>

</project>